source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

abstract_target 'import_pods' do
  pod 'ImageValet', :path => '../'
  pod 'Alamofire'
  pod 'AlamofireImage'

  target 'ImageValet_Example' do
      platform :ios, '9.0'
  end

  target 'ImageValet_Tests' do
      platform :ios, '9.0'
    pod 'Nimble'
  end
  
  target 'TVOS' do
      platform :tvos, '10.1'
  end
  
  target 'TVOSTests' do
      platform :tvos, '10.1'
      
      pod 'Nimble'
  end
end
